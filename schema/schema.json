{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "http://github.com/manfred/mac/schema.json",
    "type": "object",
    "title": "Manfred Awesomic CV",
    "description": "An open CV format",
    "properties": {
        "settings": {
            "type": "object",
            "description": "CV Settings",
            "properties": {
                "language": {
                    "type": "string",
                    "description": "The language of the CV expressed as a [ISO 639-1 code](https://en.wikipedia.org/wiki/ISO_639-1)",
                    "examples": [
                        "EN",
                        "EN-US"
                    ],
                    "$comment": "TDB: link to a enum of ISO-639 codes in a external definition file"
                }
            },
            "additionalProperties": false,
            "required": [
                "language"
            ]
        },
        "aboutme": {
            "type": "object",
            "description": "Main data of the CV author",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "name of the CV author",
                    "examples": [
                        "David"
                    ]
                },
                "surnames": {
                    "type": "string",
                    "description": "surname (or surnames) of the CV author",
                    "examples": [
                        "Bonilla Fuertes"
                    ]
                },
                "introduction": {
                    "type": "string",
                    "description": "A way to explain to your future company what kind of professional you are"
                },
                "birthday": {
                    "type": "string",
                    "description": "Your birth date in format yyyy-mm-dd",
                    "format": "date",
                    "examples": [
                        "1977-07-26"
                    ]
                },
                "softskills": {
                    "type": "array",
                    "description": "List of skills you will carry with you to your next job, whatever it is",
                    "additionalItems": true,
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "type": "string",
                        "examples": [
                            "strategic vision",
                            "TDD",
                            "public speaking"
                        ]
                    }
                },
                "relevantlinks": {
                    "type": "array",
                    "additionalItems": true,
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "linkedIn",
                                    "github",
                                    "twitter",
                                    "website",
                                    "other"
                                ]
                            },
                            "URL": {
                                "type": "string",
                                "format": "hostname"
                            },
                            "description": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": false,
                        "required": [
                            "type",
                            "URL"
                        ]
                    }
                },
                "avatar": {
                    "type": "object",
                    "description": "author's picture or avatar",
                    "properties": {
                        "alt": {
                            "type": "string",
                            "description": "Alternative description of the image"
                        }
                    },
                    "additionalProperties": true,
                    "oneOf": [
                        {
                            "type": "object",
                            "description": "A link to author's avatar",
                            "properties": {
                                "link": {
                                    "type": "string",
                                    "format": "uri",
                                    "examples": [
                                        "https://pbs.twimg.com/profile_images/946845160004112384/ap8_xjIa_400x400.jpg"
                                    ]
                                }
                            },
                            "additionalProperties": true,
                            "required": [
                                "link"
                            ]
                        },
                        {
                            "type": "object",
                            "description": "A picture in base64",
                            "properties": {
                                "data": {
                                    "type": "string",
                                    "examples": [
                                        ""
                                    ]
                                },
                                "mediatype": {
                                    "type": "string",
                                    "enum": [
                                        "image/png",
                                        "image/jpeg"
                                    ]
                                },
                                "encoding": {
                                    "type": "string",
                                    "const": "base64"
                                }
                            },
                            "additionalProperties": true,
                            "required": [
                                "data",
                                "mediatype",
                                "encoding"
                            ]
                        }
                    ],
                    "$comment": "TDB: to be refactor to extract an image  \"object\" within a definitions section or schema"
                }
            },
            "additionalProperties": false,
            "required": [
                "name",
                "surnames"
            ]
        }
    },
    "additionalProperties": true,
    "required": [
        "settings",
        "aboutme"
    ]
}